
doctype html
html
  head
    title Register
     link(rel='stylesheet', href='/stylesheets/style.css')
  body
    form(action="/register" method="POST")
      input(type="text" name="username" placeholder="Username" required)
      input(type="password" name="password" placeholder="Password" required)
      select(name="role")
        option(value="user") User
        option(value="psychologist") Psychologist
      input(type="text" name="city" placeholder="City")
      if role === 'psychologist'
        input(type="text" name="certifications" placeholder="Certifications (comma-separated)")
        input(type="text" name="officeLocation" placeholder="Office Location")
        input(type="number" name="consultationFee" placeholder="Consultation Fee")
      button(type="submit") Register
